<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/rectangulo_medicamento"
            android:layout_gravity="center">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/circulo_medicamento"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/dosisintervalo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tiempo"
                    android:textColor="#0000FF"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                >


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/medicamentonombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/MEDICAMENTO"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/horaaplicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/horadetomar"
                        android:textColor="@color/white"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/tomadoexpirado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yatomado"
                        android:textColor="#FF0000"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"/>



                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_marginRight="15dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/editar"
                            android:id="@+id/icon_edit"
                            android:layout_marginRight="3dp"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/sumar"
                            android:id="@+id/icn_registrar"
                            android:layout_marginRight="3dp"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/historial"
                            android:id="@+id/icon_historial"
                            android:layout_marginRight="3dp"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_edit"
                            android:id="@+id/icon_delete"
                            android:layout_marginRight="3dp"
                            android:visibility="gone"/>


                    </androidx.appcompat.widget.LinearLayoutCompat>




                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/siguientemedicamento"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/Siguiente_medicamento"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>




        </androidx.appcompat.widget.LinearLayoutCompat>







</androidx.appcompat.widget.LinearLayoutCompat>