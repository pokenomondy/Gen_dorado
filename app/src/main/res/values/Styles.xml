<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="boton_redondo_morado"
        parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/boyon_redondo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/morado</item>
    </style>

    <style name="boton_hora"
        parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/boyon_redondo</item>
        <item name="android:textColor">@color/morado</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="boton_redondo_rojo"
        parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/boton_redondo_rojo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="texview_morado_rendondo"
        parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/texview_botde_morado</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">20px</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>

    </style>
    <style name="boton_redondo_blanco"
        parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/boton_redondo_invertido</item>
        <item name="android:textColor">@color/boton_morado</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="textvirestilotextos"
        parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">50dp</item>

    </style>

    <style name="textestiloadd"
        parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>

    </style>

    <style name="textestiloadddos"
        parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">10dp</item>

    </style>

    <style name="dashboard_user_grande"
        parent="Widget.AppCompat.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="dashboard_user_pequeño"
        parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="DialogAnimationFromTop">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_top</item>
    </style>

    <style name="MyTimePickerStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="colorAccent">@color/morado</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">350dp</item>
    </style>

    <style name="MiSpinnerStyle">
        <item name="android:background">@drawable/fondo_spinner</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">0dp</item>

        <!-- Otros atributos que quieras agregar -->
    </style>

    <style name="MySpinnerDropdownStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:padding">16dp</item> <!-- Espaciado exterior -->
        <item name="android:background">@android:color/white</item> <!-- Fondo de la lista -->
        <item name="android:divider">@android:color/black</item> <!-- Color de la línea separadora entre elementos -->
        <item name="android:dividerHeight">1dp</item> <!-- Grosor de la línea separadora -->
        <item name="android:popupBackground">@color/morado</item> <!-- Fondo del Spinner -->
        <item name="android:textColor">@color/black</item> <!-- Color del texto -->
        <item name="android:textSize">20sp</item> <!-- Tamaño del texto -->
    </style>

    <style name="textatracctivp">
        <item name="android:background">@drawable/fondo_morado_gradiente</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>